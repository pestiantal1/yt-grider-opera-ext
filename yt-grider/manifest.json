{
  "manifest_version": 3,
  "name": "YouTube Grid Customizer",
  "version": "1.0",
  "description": "Change how many videos appear per row on YouTube's homepage.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html"
}